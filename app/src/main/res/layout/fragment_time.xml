<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.crazy_iter.checkjobs.SearchFragments.TimeFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/searchTimeRV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="?attr/actionBarSize"/>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/textsAndIcons"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightPrimary"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/fab_margin"
            android:paddingRight="@dimen/fab_margin"
            android:paddingTop="@dimen/padding_items"
            android:paddingBottom="@dimen/padding_items">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/button_background"
                android:layout_marginRight="@dimen/margin_items"
                android:layout_marginLeft="@dimen/margin_items">
                <Button
                    android:id="@+id/disHours"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:padding="0dp"
                    android:layout_margin="0dp"
                    android:text="-"
                    android:background="@color/hideColor"
                    android:textColor="@color/textsAndIcons"
                    android:textSize="@dimen/subtitle_text_size"/>

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_background_border"
                    android:paddingLeft="@dimen/padding_items"
                    android:paddingRight="@dimen/padding_items"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/hoursTime"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="4"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/subtitle_text_size"
                        android:textStyle="bold"
                        android:gravity="center"/>
                </LinearLayout>

                <Button
                    android:id="@+id/addHours"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:padding="0dp"
                    android:text="+"
                    android:textColor="@color/textsAndIcons"
                    android:background="@color/hideColor"
                    android:textSize="@dimen/subtitle_text_size"/>
            </LinearLayout>

            <RadioGroup
                android:id="@+id/amPMGB"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/padding_items"
                android:layout_marginRight="@dimen/padding_items">
                <RadioButton
                    android:id="@+id/amRB"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="A.M"
                    android:textSize="@dimen/subtitle_text_size"
                    android:textColor="@color/colorAccent"/>
                <RadioButton
                    android:id="@+id/pmRB"
                    android:checked="true"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="P.M"
                    android:textSize="@dimen/subtitle_text_size"
                    android:textColor="@color/colorAccent"/>
            </RadioGroup>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/button_background"
                android:layout_marginRight="@dimen/margin_items"
                android:layout_marginLeft="@dimen/margin_items">
                <Button
                    android:id="@+id/disDays"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:padding="0dp"
                    android:layout_margin="0dp"
                    android:text="-"
                    android:background="@color/hideColor"
                    android:textColor="@color/textsAndIcons"
                    android:textSize="@dimen/subtitle_text_size"/>

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_background_border"
                    android:paddingLeft="@dimen/padding_items"
                    android:paddingRight="@dimen/padding_items"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/daysNum"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="4"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/subtitle_text_size"
                        android:textStyle="bold"
                        android:gravity="center"/>
                </LinearLayout>

                <Button
                    android:id="@+id/addDays"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:padding="0dp"
                    android:text="+"
                    android:textColor="@color/textsAndIcons"
                    android:background="@color/hideColor"
                    android:textSize="@dimen/subtitle_text_size"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Days"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/subtitle_text_size"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginLeft="@dimen/margin_items"
                android:layout_marginRight="@dimen/margin_items"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
