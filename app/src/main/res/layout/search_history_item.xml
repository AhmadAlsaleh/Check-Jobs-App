<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/searchItemLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/clearSearchItem"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_clear"
            android:padding="10dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:padding="@dimen/padding_items">

            <TextView
                android:id="@+id/searchWordItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search_word"
                android:textColor="@color/primaryText"
                android:textSize="@dimen/subtitle_text_size"
                android:ellipsize="end"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/placeSearchItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Place"
                android:textSize="@dimen/subtitle_text_size"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:ellipsize="end"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/salaryCurrencySearchItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="low ... high, currency"
                android:textSize="15dp"
                android:textColor="@color/secondaryText"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/dividerColor"
            android:layout_marginTop="@dimen/margin_items"
            android:layout_marginBottom="@dimen/margin_items"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/padding_items">

            <TextView
                android:id="@+id/hoursSearchItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 Hours, PM"
                android:textColor="@color/primaryText"
                android:textSize="@dimen/subtitle_text_size"
                android:ellipsize="end"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/daysSearchItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6 Days"
                android:textSize="@dimen/subtitle_text_size"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:ellipsize="end"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/genderSearchItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="male"
                android:textSize="15dp"
                android:textColor="@color/secondaryText"/>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dividerColor"
        android:layout_marginRight="@dimen/margin_items"
        android:layout_marginLeft="@dimen/margin_items"/>

</LinearLayout>