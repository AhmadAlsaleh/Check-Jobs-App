<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.crazy_iter.checkarround.MainSlidesActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/mainVP"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <ImageView
        android:id="@+id/leftIV"
        android:visibility="gone"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="25dp"
        android:layout_centerInParent="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_arrow_left" />

    <ImageView
        android:id="@+id/rightIV"
        android:visibility="gone"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_arrow_right"
        android:layout_margin="25dp"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/skipSlideTV"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/skip"
        android:textSize="@dimen/subtitle_text_size"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/margin_items"
        android:background="@color/colorAccentLight2"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"/>

</RelativeLayout>
